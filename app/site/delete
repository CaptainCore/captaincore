#!/bin/bash

#
#   Remove site configurations
#
#   `captaincore site delete <site>`
#

# Load configuration
root_path="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"; root_path=${root_path%app*}
source ${root_path}lib/arguments

# Load site configs
eval $(captaincore site get $1 --bash)

cd ${root_path}data

if [[ "$site" != "" ]] && [[ "$site_id" != "" ]]; then
	wp eval-file ../lib/php/site-delete.php site=$site id=$site_id
fi
