#!/bin/bash

##
##		Rollback (theme/plugin) from a quicksave
##
## 		Pass arguments from command line like this
##		captaincore rollback <site> <commit> [--plugin=<plugin>] [--theme=<theme>] [--all-plugins] [--all-themes] [--all]
##
site=$1
commit=$2

# Load configuration
root_path="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"; root_path=${root_path%app*}
source ${root_path}config
source ${root_path}/lib/arguments

### Load FTP credentials
eval $(captaincore site get $site --bash)

if [[ "$plugin" != "" ]]; then

	echo "Rolling back plugin $plugin"
	cd $path/Quicksaves/$site/
	mkdir -p ~/Tmp/restore/$commit/
	git archive --format=zip $commit:plugins/$plugin/ > ~/Tmp/restore/$commit/$plugin.zip
	captaincore upload $website ~/Tmp/restore/$commit/$plugin.zip --public
	captaincore ssh $website --command="wp plugin install $plugin.zip --force --skip-plugins --skip-themes --skip-packages; rm $plugin.zip"
	rm -rf ~/Tmp/restore/$commit/

fi

if [[ "$theme" != "" ]]; then

	echo "Rolling back theme $theme"
	cd $path/Quicksaves/$site/
	mkdir -p ~/Tmp/restore/$commit/
	git archive --format=zip $commit:themes/$theme/ > ~/Tmp/restore/$commit/$theme.zip
	captaincore upload $website ~/Tmp/restore/$commit/$theme.zip --public
	captaincore ssh $website --command="wp theme install $theme.zip --force --skip-plugins --skip-themes --skip-packages; rm $theme.zip"
	rm -rf ~/Tmp/restore/$commit/

fi

if [[ "$all" == "true" ]]; then

	echo "Rolling back entire quicksave"
	cd $path/Quicksaves/$site/
	mkdir -p ~/Tmp/restore/$commit/
	git archive --format=zip $commit: > ~/Tmp/restore/$commit/quicksave_${commit}_all.zip
	captaincore upload $website ~/Tmp/restore/$commit/quicksave_${commit}_all.zip --public
	echo '<?php $upgrading = time(); ?>' | captaincore ssh $website --command="cat > .maintenance; rm -rf wp-content/themes/; unzip -o quicksave_${commit}_all.zip 'themes/*' -d wp-content/; rm -rf wp-content/plugins/; unzip -o quicksave_${commit}_all.zip 'plugins/*' -d wp-content/; rm -rf wp-content/mu-plugins/; unzip -o quicksave_${commit}_all.zip 'mu-plugins/*' -d wp-content/; rm .maintenance"
	rm -rf ~/Tmp/restore/$commit/

fi
